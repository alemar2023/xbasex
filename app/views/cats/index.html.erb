<h1>Categories</h1>

<table class="table" >
  <tr>
    <th>Name</th>
    <th>Parent</th>
    <th colspan="3"></th>
  </tr>

  <% @cats.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.parent&.name || 'None' %></td>

      <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
       </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Cat', new_cat_path %>
<hr>
<ul>
  <% @root_cats.each do |cat| %>
    <li><%= cat.name %></li>
  <% end %>
</ul>

<hr>
