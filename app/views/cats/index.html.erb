<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Parent</th>
  </tr>
  </thead>
  <tbody>
  <% @root_cats.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.parent&.name || 'None' %></td>
    </tr>
    <% cat.children.each do |child| %>
      <tr>
        <td>&nbsp;&nbsp;&nbsp; <%= child.name %></td>
        <td><%= child.parent&.name || 'None' %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

